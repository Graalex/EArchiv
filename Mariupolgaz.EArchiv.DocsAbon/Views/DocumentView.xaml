<UserControl x:Class="Mariupolgaz.EArchiv.DocsAbon.Views.DocumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mariupolgaz.EArchiv.DocsAbon.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition Height="*" />
      <RowDefinition Height="50" />
    </Grid.RowDefinitions>
    <StackPanel
			Grid.Row="0"
			Grid.Column="0"
			Orientation="Horizontal"
			HorizontalAlignment="Left"
		>
			<TextBlock
				VerticalAlignment="Center"
				Text="Список документов"
			/>
		</StackPanel>
    <ListView
			Grid.Column="0"
			Grid.Row="1"
			Grid.RowSpan="2"
			ItemsSource="{Binding Documents}"
			SelectedItem="{Binding SelectedDocument}"
		/>
    <StackPanel
			Grid.Row="0"
			Grid.Column="1"
			Orientation="Horizontal"
			HorizontalAlignment="Right"
		>
			<Button
				VerticalAlignment="Center"
				Width="70"
				Content="Добавить"
				Command="{Binding AddDocument}"
			/>
      <Button
				VerticalAlignment="Center"
				Width="70"
				Content="Заменить"
				Command="{Binding}"
			/>
      <Button
				VerticalAlignment="Center"
				Width="70"
				Content="Удалить"
				Command="{Binding}"
			/>
    </StackPanel>
		<Image
			Grid.Column="1"
			Grid.Row="1"
			Source="{Binding SelectedDocument.Source}"
		/>
    <StackPanel
			Grid.Row="2"
			Grid.Column="1"
			Orientation="Horizontal"
		>
			<TextBlock
				VerticalAlignment="Center"
				Width="400"
				Text="{Binding}"
			/>
			<Button
				VerticalAlignment="Center"
				Width="80"
				Content="Копировать"
				Command="{Binding}"
			/>
		</StackPanel>
  </Grid>
  
</UserControl>
