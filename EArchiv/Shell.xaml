<Window x:Class="Mariupolgaz.EArchiv.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:prism="http://www.codeplex.com/prism"
				xmlns:common="clr-namespace:Mariupolgaz.EArchiv.Common;assembly=mariupolgaz.earchiv.common"
        xmlns:l="clr-namespace:Mariupolgaz.EArchiv"
        mc:Ignorable="d"
        Title="ПАО Мариупольгаз Электронный архив" Height="711.419" Width="1130"
				DataContext="{DynamicResource vm}" FontSize="14">
  <Window.Resources>
    <l:ArchivModelView x:Key="vm"/>
  </Window.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="360" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Column="0" Orientation="Vertical">
			<ContentControl prism:RegionManager.RegionName="{x:Static common:RegionNames.LoginRegion}" />
      <ContentControl prism:RegionManager.RegionName="{x:Static common:RegionNames.AbonentRegion}"/>
    </StackPanel>
    <!-- Правая панель -->
    <Border
			Grid.Column="1"
		>
    <ContentControl
			prism:RegionManager.RegionName="{x:Static common:RegionNames.DocumentRegion}"
		/>
		</Border>
  </Grid>
</Window>
